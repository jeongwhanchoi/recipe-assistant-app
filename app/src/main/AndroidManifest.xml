<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jeongwhanchoi.recipeassistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--needed for image loading to create a recipe-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_recipe"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        tools:replace="android:icon">
        <activity
            android:name="com.jeongwhanchoi.recipeassistant.MainActivity"
            android:hardwareAccelerated="true">
            <meta-data
                android:name="android.app.searchable"

                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jeongwhanchoi.recipeassistant.SingleRecipeActivity"
            android:label="@string/recipe_page_title">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="recipeassistant.info"
                    android:scheme="http" />
                <data
                    android:host="recipeassistant.info"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jeongwhanchoi.recipeassistant.SettingsActivity"
            android:label="@string/settings_title">

        </activity>

